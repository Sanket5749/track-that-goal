<div class="d-flex justify-content-center">
  <div style="width: 400px">
    <% if (success && success.length) { %>
    <p
      class="alert alert-warning alert-dismissible fade show text-center"
      role="alert"
    >
      <%= success %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </p>
    <% } %> <% if (error && error.length) { %>
    <p
      class="alert alert-warning alert-dismissible fade show text-center"
      role="alert"
    >
      <%= error %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </p>
    <% } %>
  </div>
</div>
